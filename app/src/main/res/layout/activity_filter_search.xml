<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82A7FF"
    tools:context=".FilterSearch">

    <EditText
        android:id="@+id/enter_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_author" />

    <EditText
        android:id="@+id/enter_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_title" />

    <EditText
        android:id="@+id/enter_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_genre" />

    <EditText
        android:id="@+id/enter_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_year" />

    <EditText
        android:id="@+id/enter_fiction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_subject" />

    <TextView
        android:id="@+id/author_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_author"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_author"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_title"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/genre_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_genre"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_genre"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/year_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_year"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_year"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subject_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_subject"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_subject"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fiction_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/enter_fiction"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_fiction"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/search_btn"
        app:layout_constraintEnd_toEndOf="@+id/enter_fiction"
        app:layout_constraintTop_toBottomOf="@+id/enter_fiction" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>