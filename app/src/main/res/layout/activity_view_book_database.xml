<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82A7FF">

    <ImageView
        android:id="@+id/bookPictureDB"
        android:layout_width="207dp"
        android:layout_height="196dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_at_the_end_of_the_universe" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_label_vb"
        app:layout_constraintBaseline_toBaselineOf="@+id/title_txt_vb_db"
        app:layout_constraintStart_toStartOf="@+id/bookPicture" />

    <TextView
        android:id="@+id/author_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/author_label_vb"
        app:layout_constraintEnd_toStartOf="@+id/author_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        tools:text="Author:" />

    <TextView
        android:id="@+id/pages_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/pages_label_vb"
        app:layout_constraintBottom_toBottomOf="@+id/pages_txt_vb_db"
        app:layout_constraintEnd_toStartOf="@+id/pages_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/author_txt"
        app:layout_constraintTop_toBottomOf="@+id/author_txt" />

    <TextView
        android:id="@+id/year_label"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="@string/published_label_vb"
        app:layout_constraintBaseline_toBaselineOf="@+id/year_txt_vb_db"
        app:layout_constraintEnd_toStartOf="@+id/year_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pages_txt" />

    <TextView
        android:id="@+id/title_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toEndOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/bookPicture" />

    <TextView
        android:id="@+id/author_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/title_txt_vb_db"
        app:layout_constraintStart_toStartOf="@+id/title_txt_vb_db"
        app:layout_constraintTop_toBottomOf="@+id/title_txt_vb_db" />

    <TextView
        android:id="@+id/pages_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/author_txt_vb_db"
        app:layout_constraintStart_toStartOf="@+id/author_txt_vb_db"
        app:layout_constraintTop_toBottomOf="@+id/author_txt_vb_db" />

    <TextView
        android:id="@+id/year_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/pages_txt_vb_db"
        app:layout_constraintStart_toStartOf="@+id/pages_txt_vb_db"
        app:layout_constraintTop_toBottomOf="@+id/pages_txt_vb_db" />

    <TextView
        android:id="@+id/status_label"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:text="Genre:"
        app:layout_constraintBottom_toBottomOf="@+id/isbn_txt_vb_db"
        app:layout_constraintEnd_toStartOf="@+id/genre_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/year_label"
        app:layout_constraintTop_toBottomOf="@+id/year_label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/removeBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add to Library"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/isbn_txt"
        app:layout_constraintTop_toBottomOf="@+id/isbn_txt_vb_db" />

    <TextView
        android:id="@+id/genre_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        app:layout_constraintEnd_toEndOf="@+id/year_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/year_txt_vb_db"
        app:layout_constraintTop_toBottomOf="@+id/year_txt_vb_db" />

    <TextView
        android:id="@+id/isbn_txt_vb_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/genre_txt_vb_db"
        app:layout_constraintStart_toStartOf="@+id/genre_txt_vb_db"
        app:layout_constraintTop_toBottomOf="@+id/genre_txt_vb_db" />

    <TextView
        android:id="@+id/isbn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/isbn_label_vb"
        app:layout_constraintBottom_toBottomOf="@+id/isbn_txt_vb_db"
        app:layout_constraintEnd_toStartOf="@+id/isbn_txt_vb_db"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/status_label"
        app:layout_constraintTop_toBottomOf="@+id/status_label"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home__vb_db"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view_library_vb"
        app:layout_constraintTop_toTopOf="@+id/view_library_vb" />

    <Button
        android:id="@+id/view_library_vb_db"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="104dp"
        android:text="View Library"
        app:layout_constraintStart_toEndOf="@+id/set_reminder_vb"
        app:layout_constraintTop_toBottomOf="@+id/removeBook" />

    <Button
        android:id="@+id/set_reminder_vb_db"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Set Reminder"
        app:layout_constraintBottom_toBottomOf="@+id/view_library_vb_db"
        app:layout_constraintEnd_toStartOf="@+id/view_library_vb_db"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>